meta {
  name: Invalid Email
  type: http
  seq: 3
}

post {
  url: {{baseUrl}}/forms
  body: json
  auth: none
}

body:json {
  {
    "client": "{{client}}",
    "formType": "contacts",
    "tags": "bruno,tests",
    "formData": {
      "firstName": "Test",
      "lastName": "User",
      "email": "invalid-email",
      "message": "This should fail email validation"
    }
  }
}

tests {
  test("status is 400", function() {
    expect(res.status).to.equal(400);
  });

  test("has validation error", function() {
    expect(res.body.error).to.equal("Validation failed");
  });
}
