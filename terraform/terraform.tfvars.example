# General Configuration
aws_region  = "ap-south-1"
aws_profile = "your-aws-profile"
environment = "production"

project_name = "GadgetCloud-Forms"

# API Configuration
api_name        = "gadgetcloud-forms-api"
api_description = "GadgetCloud Forms Service HTTP API"

enable_cors         = true
cors_allow_origins  = ["https://gadgetcloud.io", "https://www.gadgetcloud.io", "*"]
cors_allow_methods  = ["GET", "POST", "OPTIONS"]
cors_allow_headers  = ["content-type", "authorization"]

# Lambda Configuration
lambda_runtime     = "python3.11"
lambda_timeout     = 30
lambda_memory_size = 256
lambda_source_dir  = "../lambda"

# Email Configuration
notification_email = "notifications@gadgetcloud.io"
ses_domain         = "gadgetcloud.io"

# DynamoDB Configuration
dynamodb_billing_mode = "PAY_PER_REQUEST"

# Custom Domain Configuration (Optional)
enable_custom_domain = false
custom_domain_name   = "forms.gadgetcloud.io"
hosted_zone_id       = "Z05023092A1IOEM9O5L0Z"  # Your Route53 hosted zone ID

# Backend Configuration
terraform_state_bucket         = "your-tf-state-bucket"
terraform_state_dynamodb_table = "your-terraform-locks"
